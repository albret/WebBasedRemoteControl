<h2 style="text-align: center; font-size: 16px;"> Enter current password: </h2>
</br>
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
    <input id="oldPass" type="password" class="form-control" name="password" placeholder="Password">
  </div>
</br>
<h2 style="text-align: center; font-size: 16px;"> Enter new password: </h2>
</br>
<div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
    <input id="newPass" type="password" class="form-control" name="password2" placeholder="Password">
  </div>
</form>
<button type="submit" class="btn btn-primary" id="resetbtn" style="margin-top: 2%;">Reset</button>


<script>
	$(document).ready(function () {
		$('.dropdown-toggle').dropdown();
	});

  document.getElementById("resetbtn").addEventListener("click", resetPassword());

  function resetPassword(){
    var oldPass = document.getElementById("oldPass").value;
    var newPass = document.getElementById("newPass").value;
    console.log(oldPass + "-->" + newPass)
    if(validatePassword(oldPass, newPass)){
      $.ajax({
          url: '/api/change_password/',
          type: 'POST',
          data: {
              'oldPassword' : oldPass,
              'newPassword' : newPass
          },
          success: function(response) {
            alert("success!");
            window.location.href = 'https://applepie.albert.tech/profile';
          },
          error: function(response) {
            alert("Reset Password failed!");
          }
      });
    }
  }//end of func resetPassword()

  function validatePassword(oldPass, newPass){
    var lowerPass = newPass.toLowerCase();
    if (newPass.length < 6) {
        alert("Password must be more than 5 characters!");
        document.getElementById("newPass").value = "";
        document.getElementById("oldPass").value = "";
      } else if (/\d/.test(newPass) === false) {
            alert("Password must contain at least one number!");
            document.getElementById("newPass").value = "";
            document.getElementById("oldPass").value = "";
      } else if (lowerPass === newPass) {
          alert("Password must contain at least one uppercase letter!");
          document.getElementById("newPass").value="";
          document.getElementById("oldPass").value = "";
      } else if (oldPass === newPass){
          alert("new Password must be different from the old password!");
          document.getElementById("newPass").value="";
          document.getElementById("oldPass").value = "";
      }
      else {
        return true;
      }
      return false;
  }//end func validatePassword


</script>

